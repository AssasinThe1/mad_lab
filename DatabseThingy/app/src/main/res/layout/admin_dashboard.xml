<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Create User -->
        <EditText
            android:id="@+id/et_new_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Name" />

        <EditText
            android:id="@+id/et_new_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Username" />

        <EditText
            android:id="@+id/et_new_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_create_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create User" />

        <!-- Change Password -->
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username" />

        <EditText
            android:id="@+id/et_new_password_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password" />

        <!-- Change Username -->
        <EditText
            android:id="@+id/et_old_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Old Username" />

        <EditText
            android:id="@+id/et_new_username_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Username" />

        <Button
            android:id="@+id/btn_change_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Username" />

        <!-- Delete User -->
        <EditText
            android:id="@+id/et_username_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username" />

        <Button
            android:id="@+id/btn_delete_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete User" />

        <!-- View All Users -->
        <Button
            android:id="@+id/btn_view_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Users" />

        <!-- Users List -->
        <TextView
            android:id="@+id/tv_users_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>